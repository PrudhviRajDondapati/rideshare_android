<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".SingleListActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/ride_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_weight="1"
                    android:text="Text Goes Here"
                    android:textSize="24sp" />






            </LinearLayout>


            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2"
                android:layout_below="@+id/descc_rl"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/vieww" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v1"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:weightSum="4">


                    <LinearLayout
                        android:id="@+id/home_sq_ft_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/from_ll"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="From" />



                        <TextView
                            android:id="@+id/from"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="kitchener " />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/margin_2"
                        android:layout_height="match_parent"
                        android:background="@color/filter_clear_all_color" />

                    <LinearLayout
                        android:id="@+id/bedroom_ll"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/to_ll"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="TO" />

                        <TextView
                            android:id="@+id/to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="Toronto" />
                    </LinearLayout>




                </LinearLayout>

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:layout_below="@+id/small_details"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@color/vieww" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_marginTop="5dp" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:layout_below="@+id/detail"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/vieww" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$ Price goes here"
                            android:textAlignment="center"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/margin_2"
                        android:layout_height="match_parent"
                        android:background="@color/filter_clear_all_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/seats_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="seats"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/seats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/v4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:layout_below="@+id/details_data"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@color/vieww" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Description"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick UP location in toronto: - Union Station                                Drop location in Kitchener is :- Fairview mall "
                    android:textSize="14sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Floor Plan"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




            </LinearLayout>

            <Button
                android:id="@+id/book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Book Now" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>